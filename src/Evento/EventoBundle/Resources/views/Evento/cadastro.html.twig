<form ng-controller="EventoCadastroCtrl" ng-init="init()" ng-submit="save()">
    <h2>Cadastro de Evento<br> <small>Todos os campos deste formuário são obrigatórios</small></h2>
    <hr>

    <ol class="breadcrumb">
        <li><a href="#/">Inicial</a></li>
        <li><a href="#/user">Evento</a></li>
        <li class="active">Cadastro</li>
    </ol>

    <input type="hidden" ng-model="form.id" value="form.id">

    <div bs-tabs>

        <div title="EVENTO" bs-pane><br>

            <div class="form-group">
                <div class="btn-group" ng-model="form.publicar" bs-radio-group>
                    <label class="btn btn-primary"><input type="radio" class="btn btn-default" value="0"> NÃO PUBLICAR</label>
                    <label class="btn btn-primary"><input type="radio" class="btn btn-default" value="1"> PUBLICAR</label>
                </div>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Título</label>
                <input type="text" class="form-control" maxlength="255" ng-model="form.titulo" placeholder="Digite o título do evento" required>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Descrição</label>
                <input type="text" class="form-control" maxlength="2000" ng-model="form.descricao" placeholder="Digite a descrição do evento" required>
            </div>

            <div class="row">

                <div class="form-group col-md-3" ng-class="{'has-error': form.inscricaoInicio.$invalid}">
                    <label ><i class="fa fa-calendar"></i> Início das Inscrições</label>
                    <input type="text" maxlength="10" class="form-control" ng-model="form.inscricaoInicio" placeholder="Selecione a data" required
                        readonly   data-date-format="dd/MM/yyyy" data-date-type="number" data-min-date="today"  data-autoclose="1" name="date1" bs-datepicker>
                </div>

                <div class="form-group col-md-3" ng-class="{'has-error': form.inscricaoFim.$invalid}">
                    <label ><i class="fa fa-calendar"></i> Fim das Inscrições</label>
                    <input type="text" maxlength="10" class="form-control" ng-model="form.inscricaoFim" placeholder="Selecione a data" required
                           readonly   data-date-format="dd/MM/yyyy" data-date-type="number" data-min-date="today"  data-autoclose="1" name="date2" bs-datepicker>
                </div>

            </div>

            <div class="row">

                <div class="form-group col-md-3" ng-class="{'has-error': form.dataInicio.$invalid}">
                    <label ><i class="fa fa-calendar"></i> Início do Evento</label>
                    <input type="text" maxlength="10" class="form-control" ng-model="form.dataInicio" placeholder="Selecione a data" required
                           readonly   data-date-format="dd/MM/yyyy" data-date-type="number" data-min-date="today"  data-autoclose="1" name="date1" bs-datepicker>
                </div>

                <div class="form-group col-md-3" ng-class="{'has-error': form.dataFim.$invalid}">
                    <label ><i class="fa fa-calendar"></i> Fim do Evento</label>
                    <input type="text" maxlength="10" class="form-control" ng-model="form.dataFim" placeholder="Selecione a data" required
                           readonly   data-date-format="dd/MM/yyyy" data-date-type="number" data-min-date="today"  data-autoclose="1" name="date2" bs-datepicker>
                </div>

            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Local</label>
                <input type="text" class="form-control" maxlength="2000" ng-model="form.local" placeholder="Digite o local do evento" required>
            </div>

            <div class="row">
                <div class="form-group col-md-2">
                    <label ><i class="fa fa-clock-o"></i> Carga horária (H)</label>
                    <input type="number" maxlength="10" class="form-control" ng-model="form.cargaHoraria" placeholder="Digite a carga horária" required>
                </div>
            </div>

            <div class="form-group">
                <div class="btn-group" ng-model="form.publicar" bs-radio-group>
                    <label class="btn btn-primary"><input type="radio" class="btn btn-default" value="1"> EVENTO PAGO</label>
                    <label class="btn btn-primary"><input type="radio" class="btn btn-default" value="0"> EVENTO NÃO PAGO</label>
                </div>
            </div>

            <fieldset>
                <legend>Valor do Evento</legend>

                <div class="row">
                    <div class="form-group col-md-3">
                        <label ><i class="fa fa-money"></i> Valor Sócio</label>
                        <input mask-money prefix="real.prefix" type="text" maxlength="20" class="form-control" ng-model="form.valorSocio" placeholder="Digite o valor" required>
                    </div>

                    <div class="form-group col-md-3">
                        <label ><i class="fa fa-money"></i> Valor não Sócio</label>
                        <input mask-money prefix="real.prefix" type="text" maxlength="20" class="form-control" ng-model="form.valorNSocio" placeholder="Digite o valor" required>
                    </div>

                    <div class="form-group col-md-3">
                        <label ><i class="fa fa-money"></i> Valor Estudante</label>
                        <input mask-money prefix="real.prefix" type="text" maxlength="20" class="form-control" ng-model="form.valorEstudante" placeholder="Digite o valor" required>
                    </div>

                    <div class="form-group col-md-3">
                        <label ><i class="fa fa-money"></i> Valor Estudante Associado</label>
                        <input mask-money prefix="real.prefix" type="text" maxlength="20" class="form-control" ng-model="form.valorEstudanteAssociado" placeholder="Digite o valor" required>
                    </div>
                </div>
            </fieldset>

        </div>

        <div title="DESCONTO" bs-pane><br>

            <div class="form-group">
                <div class="btn-group" ng-model="form.publicar" bs-radio-group>
                    <label class="btn btn-primary"><input type="radio" class="btn btn-default" value="PF"> PESSOA FÍSICA</label>
                    <label class="btn btn-primary"><input type="radio" class="btn btn-default" value="PJ"> PESSOA JURÍDICA</label>
                </div>
            </div>

            <div class="form-group">
                <div class="btn-group" ng-model="form.publicar" bs-radio-group>
                    <label class="btn btn-default"><input type="radio" class="btn btn-default" value="1"> DESCONTO VALOR FIXO</label>
                    <label class="btn btn-default"><input type="radio" class="btn btn-default" value="0"> DESCONTO PORCENTAGEM %</label>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-2">
                    <label >Porcentagem</label>
                    <div class="input-group">
                        <input type="number" maxlength="3" ng-maxlength="3" class="form-control" ng-model="form.cargaHoraria">
                        <span class="input-group-addon">%</span>
                    </div>
                </div>

                <div class="form-group col-md-2">
                    <label ><i class="fa fa-money"></i> Valor do desconto</label>
                    <input mask-money prefix="real.prefix" type="text" maxlength="20" class="form-control" ng-model="form.valorEstudanteAssociado" placeholder="Digite o valor" required>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label >Código de Desconto</label>
                        <div class="input-group">
                            <input type="text" class="form-control input-lg" readonly maxlength="100" ng-model="form.local" placeholder="Clique ao lado para gerar código de desconto">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-primary btn-lg">GERAR CÓDIGO</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <hr>

    <div class="box">
        <a href="#/evento" class="btn btn-default">CANCELAR</a>
        <button type="submit" class="btn btn-primary">SALVAR</button>
    </div>

</form>