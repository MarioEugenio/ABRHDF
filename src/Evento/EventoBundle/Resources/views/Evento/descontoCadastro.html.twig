<form ng-controller="DescontoCadastroCtrl" ng-init="init()" ng-submit="save()">
    <h2>Cadastro de Desconto<br> <small>Todos os campos deste formuário são obrigatórios</small></h2>
    <hr>

    <ol class="breadcrumb">
        <li><a href="#/">Inicial</a></li>
        <li><a href="#/desconto">Desconto</a></li>
        <li class="active">Cadastro</li>
    </ol>

    <div class="form-group">
        <input bs-switch ng-model="form.tipoUser" type="radio" switch-label="PESSOA"
               switch-on-text="FÍSICA" switch-off-text="JURÍDICA" ng-true-value="1" ng-false-value="2">
    </div>

    <div class="form-group">
        <input bs-switch ng-model="form.descontoPorcentagem" type="radio" switch-label="DESCONTO"
               switch-on-text="VALOR FIXO" switch-off-text="PORCENTAGEM" ng-true-value="1" ng-false-value="0">
    </div>

    <div class="row">
        <div class="form-group col-md-2" ng-show="!form.descontoPorcentagem">
            <label >Porcentagem</label>
            <div class="input-group">
                <input type="number" maxlength="3" ng-required="!form.descontoPorcentagem"
                       ng-maxlength="3" class="form-control" ng-model="form.cargaHoraria">
                <span class="input-group-addon">%</span>
            </div>
        </div>

        <div class="form-group col-md-2" ng-show="form.descontoPorcentagem == 1">
            <label ><i class="fa fa-money"></i> Valor do desconto</label>
            <input mask-money prefix="real.prefix" type="text" maxlength="20" class="form-control"
                   ng-required="form.descontoPorcentagem == 1" ng-model="form.valorEstudanteAssociado" placeholder="Digite o valor" required>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label >Código de Desconto</label>
            <div class="input-group">
                <input type="text" class="form-control input-lg" readonly maxlength="100" ng-model="form.local" placeholder="Clique ao lado para gerar código de desconto">
                <div class="input-group-btn">
                    <button type="button" class="btn btn-primary btn-lg">GERAR CÓDIGO</button>
                </div>
            </div>
        </div>
    </div>
</div>

<hr>

<div class="box">
    <a href="#/desconto" class="btn btn-default">CANCELAR</a>
    <button type="submit" class="btn btn-primary">SALVAR</button>
</div>

</form>